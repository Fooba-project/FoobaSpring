<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="fooba.dao.IResDao2">
	<resultMap id="resMap2" type="java.util.HashMap"></resultMap>
	
	<select id="foodList" statementType="CALLABLE" parameterType="java.util.HashMap">
		{CALL foodList( #{rseq},#{ref_cursor , mode=OUT, jdbcType=CURSOR, javaType=ResultSet, resultMap=resMap2})}
	</select>
	
	<select id="selectFood" statementType="CALLABLE" parameterType="java.util.HashMap">
		{CALL selectFood( #{fseq},#{ref_cursor , mode=OUT, jdbcType=CURSOR, javaType=ResultSet, resultMap=resMap2})}
	</select>
	
	<update id="updateFoodMenu" statementType="CALLABLE" parameterType="java.util.HashMap">
		{ CALL updateFoodMenu(#{fseq},#{fname},#{fprice},#{fcontent},#{fside1},#{fsideprice1},
			#{fside2},#{fsideprice2},#{fside3},#{fsideprice3},#{fimage}) }
	</update>
	
	
	<insert id="addFoodMenu" statementType="CALLABLE" parameterType="java.util.HashMap">
		{ CALL addFoodMenu( #{rseq},#{fseq},#{fname},#{fprice},#{fcontent},#{fside1},#{fsideprice1},
			#{fside2},#{fsideprice2},#{fside3},#{fsideprice3},#{fimage}) }
	</insert>
	
	<delete id="deleteFoodeMenu" statementType="CALLABLE">
		{ CALL deleteFoodMenu(#{fseq})}
		
	</delete>
	
	

</mapper>

